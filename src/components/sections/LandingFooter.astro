---
import FooterTitle from '@/components/blocks/FooterTitle.astro';
import BackToTopButton from '@/components/atoms/BackToTopButton.astro';
---

<section id="contact" class="w-full pb-10 lg:pb-0 lg:min-h-screen px-4 sm:px-8 md:px-20 bg-black">
  <div class="w-full flex flex-col gap-2 pt-[10vh] sm:pt-[14vh]">
    <p class="text-2xl sm:text-3xl md:text-4xl font-mono">
      Let's Get in Touch!
    </p>
    <p class="font-mono text-lg sm:text-xl md:text-2xl pt-2 flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-3">
      <span>Email:</span>
      <a
        href="mailto:samiulalim.contact@gmail.com"
        class="hover:text-indigo-400 break-all"
      >
        contact@iamsamiul.com
      </a>
    </p>
    <p class="font-mono flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-3 text-lg sm:text-xl md:text-2xl pt-2">
      <span>Phone:</span>
      <a href="tel:+8801883907967" class="hover:text-indigo-400">
        +8801883907967
      </a>
    </p>
  </div>
  <FooterTitle />
  <div class="w-full flex flex-col sm:flex-row items-center gap-4 sm:gap-0 sm:justify-between uppercase font-mono pb-5 text-sm sm:text-base">
    <p class="flex items-center gap-2">
      <!-- Copyright icon inline SVG -->
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M14.83 14.83a4 4 0 1 1 0-5.66"/></svg>
      Samiul Alim - 2024
    </p>
    <p class="flex items-center gap-2">
      <!-- MapPin icon inline SVG -->
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/></svg>
      Dhaka, Bangladesh
    </p>
    <p class="flex items-center gap-2 hover:text-indigo-300 hover:cursor-pointer hover:font-bold">
      <BackToTopButton />
    </p>
  </div>
</section>
