---
import NavBar from '@/components/NavBar.astro';
import '@/styles/globals.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Samiul A.', description = 'Creative Designer' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600;700&family=Bebas+Neue&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <NavBar />
    <main class="z-0 relative">
      <slot />
    </main>
  </body>
</html>
